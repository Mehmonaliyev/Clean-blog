<div class="container mt-5 pt-5">
    <div class="text end">
        <a href="/api/admin/dashboard" class="btn btn-primary rounded-2">Go Back</a>
    </div>

    {{#each massage}}
                      <form class="mx-auto w-75" id="contactForm" data-sb-form-api-token="API_TOKEN" method="POST" action="/api/admin/dashboard">
                      <input type="hidden"  name="id" value={{id}}>
                                <div class="form-floating">
                                    <input value={{user_name}} class="form-control" id="name" type="text"  name="user_name" placeholder="Enter your user name..." data-sb-validations="required" />
                                    <label for="name">User Name</label>
                                    <div class="invalid-feedback" data-sb-feedback="name:required">A name is required.</div>
                                </div>

                                <div class="form-floating">
                                    <input value={{title}} class="form-control" id="name" type="text" name="title" placeholder="Enter your name..." data-sb-validations="required" />
                                    <label for="name">Title</label>
                                    <div class="invalid-feedback" data-sb-feedback="name:required">A name is required.</div>
                                </div>
                                <div class="form-floating">
                                    <input  class="form-control" id="message" value={{descr}} name="descr" placeholder="Enter your message here..." style="height: 12rem" data-sb-validations="required"/>
                                    <label for="message">Message</label>
                                    <div class="invalid-feedback" data-sb-feedback="message:required">A message is required.</div>
                                </div>
                                <br />
                        
                                <div class="d-none" id="submitSuccessMessage">
                                    <div class="text-center mb-3">
                                        <div class="fw-bolder">Form submission successful!</div>
                                        To activate this form, sign up at
                                        <br />
                                    </div>
                                </div>
                          
                                <div class="d-none" id="submitErrorMessage"><div class="text-center text-danger mb-3">Error sending message!</div></div>
                                
                                <div class="text-end">
                                    <button class="btn btn-warning text-uppercase" id="submitButton" type="submit">Edit</button>
                                </div>
                                </form>
    {{/each}}
</div>